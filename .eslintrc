{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "warn",
    "import/extensions": "off",
    "import/no-mutable-exports": "warn"
  },
  "env": {
    "node": true,
    "es6": true
  }
}
